mixin form(event)
    div(class="form-group")
        input(type="text", name="name", class="form-control", placeholder="Enter event name:" value=event.name)
    div(class="form-group")
        textarea( name="description", class="form-control" , placeholder="Enter event description:")= event.description
    div(class="form-group")
        button(type="submit", class="btn btn-success float-right") Save   